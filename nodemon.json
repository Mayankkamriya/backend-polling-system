{
  "watch": [
    "src",
    "prisma/schema.prisma",
    ".env"
  ],
  "ext": "ts,js,json,prisma,env",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts", 
    "node_modules",
    "dist",
    "coverage",
    "*.log",
    ".git",
    "prisma/migrations"
  ],
  "exec": "tsx src/app.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo 'ðŸ”„ Server restarting due to changes...'",
    "crash": "echo 'ðŸ’¥ Server crashed - waiting for file changes before restart'"
  },
  "delay": 1000,
  "colours": true,
  "legacyWatch": false,
  "verbose": true
}
