# Docker Environment Configuration
# Copy this file to .env for Docker usage

# Node.js Environment
NODE_ENV=development

# Database Configuration (Docker)
DATABASE_URL=postgresql://polling_user:polling_password@postgres:5432/polling_db

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production-256-bits
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (Docker)
REDIS_URL=redis://redis:6379

# Server Configuration
PORT=3000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info